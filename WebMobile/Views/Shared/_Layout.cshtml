    @RenderSection("styles", required: false)
    <style type="text/css">
        body {
            /*background-image: url(~/Static/Promote/promote_a999753c5fe14e26bbecad576b6a6909.jpg);
            background-repeat: no-repeat;
            background-size: 100% 100%;*/
        }

        img {
            border: 0px;
            padding: 0px;
            margin: 0px;
            display: inherit;
            width: 100%;
        }

        /*分享模态层*/
        #modal_Invite {
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            z-index: 100;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            overflow-x: hidden;
        }

        #share_container {
            position: relative;
            width: 100%;
            height: 20rem;
            top: 0;
            z-index: 110;
            display: none;
            right: 0;
        }

        #fly_img {
            position: relative;
            top: 0;
            width: 100%;
            vertical-align: middle;
            text-align: center;
            right: 0;
            margin-top: -12rem;
        }

        #fly_img_inner {
            width: 300px;
            margin: 0 auto;
            margin-right: 0.25rem;
        }

        #fly_img_inner img {
            width: 300px;
            margin-right: -12rem;
        }

        #fly_info {
            font-size: 20px;
            text-align: center;
            color: #fff;
            font-weight: 900;
            width: 200px;
            margin: -10rem auto;
            margin-right: 5.3rem;
        }

        #fly_info_inner {
            margin: 0 auto;
            width: 16rem;
        }

        #fly_info_inner i {
            margin-left: -5px;
            margin-right: -6px;
        }


        #popd4Info {
            /*display: none;*/
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            position: fixed;
            background: rgba(0,0,0,0.3);
            z-index: 100;
        }

        #popd4Info .popd-outer {
            position: absolute;
            left: 50%;
            top: 50%;
        }

        #popd4Info .popd-inter {
            width: 300px;
            height: 340px;
            position: absolute;
            left: -150px;
            top: -170px;
            border: 2px solid #fff;
            background: #fff;
            border-radius: 10px 9px 5px 8px;
        }

        #popd4Info .list-input-item .item-name {
            width: 140px;
            padding-right: 5px;
            color: #fb6088;
        }

        #popd4Info .radio {
            width: 23px;
            height: 23px;
            border-radius: 50%;
            position: relative;
            -webkit-appearance: none;
            -webkit-tap-highlight-color: rgba(255,0,0,0);
            outline: none;
            border: none;
            background-repeat: repeat;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        #popd4Info .radio::after {
            content: '';
            width: 23px;
            height: 23px;
            -webkit-appearance: none;
            position: absolute;
            top: 0;
            left: 0;
            border: 1px solid gray;
            border-radius: 50%;
            padding: 0.4rem;
            background-clip: content-box;
            box-sizing: border-box;
        }

        #popd4Info .radio:checked::after {
            outline: none;
            background-color: #dc3729;
            border: 1px solid #dc3729;
            background-clip: content-box;
            -webkit-appearance: none;
            background-repeat: repeat;
            -webkit-background-clip: content-box;
            -webkit-text-fill-color: #dc3729;
        }
    </style>
    <script type="text/javascript">

        var schoolArr = ['越秀校', '天润校', '合生广场校', '光大花园校', '嘉仕花园校', '珠江帝景校', '颐景华苑校', '洛溪校', '喜盈雅境校', '喜盈雅境校', '花样年华校', '金沙御苑校', '金海岸校', '金沙洲校', '华发四季校', '白云尚城校', '增城新塘校', '增城凤凰城校', '中海金沙湾校', '千灯湖校', '深圳龙岗校', '深圳宝安校', '其他'];

        window.onerror = function (errorMessage, scriptURI, lineNumber, columnNumber, errorObj) {
            $.ajax({
                type: "post",
                url: "/Home/LogJsError",
                dataType: "json",
                data: { errorMessage: errorMessage, scriptURI: '@Request.Url.AbsolutePath', columnNumber: columnNumber, errorObj: errorObj.toString() },
            }).done(function (data) {

            });

        }


        function accessLog() {
            $.lumos.postJson({
                url: "/Home/AccessLog",
