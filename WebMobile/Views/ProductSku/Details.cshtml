@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/swiper.min.css" rel="stylesheet" />
    <style type="text/css">
        .ct-main {
            margin-bottom: 3.2rem;
            padding: .6em .6em 0 .6em;
        }

        .summary {
            margin-top: .8rem;
        }

        .summary .name {
            font-weight: bold;
            line-height: 1.8rem;
        }

        .summary .salePrice {
            font-size: 1.8rem;
        }

        .summary .showPrice {
            text-decoration: line-through;
        }

        .summary .briefTag {
        }

        .ct-nav {
            display: flex;
            align-items: center;
            background-color: #fff;
            position: fixed;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 3.2rem;
            line-height: 3.2rem;
            border-top: 1px #dbdbdb solid;
            overflow: hidden;
            z-index: 999;
        }
    </style>
}

<script id="page_tmpl" type="text/x-jquery-tmpl">
    <div class="ct-main">
        <div class="swiper">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"> <img src="/Images/Skus/1.png" /></div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="summary">
            <div class="ct">
                <div class="it-name">
                    <p class="name">${name}</p>
                </div>
                <div class="it-briefInfo font-gray">
                    <span class="briefInfo"></span>
                </div>
                <div class="it-price">
                    <span class="salePrice">${salePrice}</span>

                    <span class="showPrice">${showPrice}</span>
                </div>
                <div class="it-briefTag">
                    <span class="briefTag">限时秒杀</span>
                </div>
            </div>
        </div>
        <div class="line-space"></div>
        <div class="details">
            <div class="ct">
                <div class="it-detailsDes">
                    <img src="/Images/Skus/2.jpg" />
                </div>
            </div>
        </div>
    </div>
    <div class="ct-nav">
        <div class="oparea">
            <div class="it-buy" id="btn_buy"><span class="txt">立即购买</span></div>
        </div>
    </div>
</script>

@section scripts{
    <script src="~/Scripts/swiper.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            loadData();

            var mySwiper = new Swiper('.swiper-container', {
                loop: true,
                // 如果需要分页器
                pagination: '.swiper-pagination',
                paginationClickable: true
            });

        });

        function loadData() {

            $.lumos.getJson({
                url: "/ProductSku/GetDetails",
                isShowLoading: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        //alert(JSON.stringify(d))
                        $('#page').html($("#page_tmpl").tmpl(d.data));
                    }
                    else {
                        $('#operate_result').html($("#operate_result_tmpl").tmpl(d.data));
                    }
                }
            });
        }

    </script>
}
