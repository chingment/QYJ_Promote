@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Content/swiper.min.css" rel="stylesheet" />
    <style type="text/css">
        .ct-main {
            margin-bottom: 3.2rem;
        }

        .swiper, .summary, .details {
            padding-left: .6rem;
            padding-right: .6rem;
        }

        .swiper {
            margin-top: .6rem;
        }

        .summary {
            margin-top: .6rem;
            margin-bottom: .6rem;
        }

        .summary .name {
            font-weight: bold;
            line-height: 1.8rem;
        }

        .summary .salePrice {
            font-size: 1.8rem;
        }

        .summary .showPrice {
            text-decoration: line-through;
            margin-left: .6rem;
        }

        .summary .it-briefTags {
            display: flex;
        }

        .summary .briefTag {
            border-radius: 5px;
            padding: .3rem .8rem;
            font-size: .8rem;
            margin-right: .6rem;
        }

        .details {
        }

        .details .its-tabs {
            display: flex;
            margin-bottom: .6rem;
        }

        .details .its-tabs .it {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            line-height: 3rem;
            border-bottom: 2px solid #ff6c8d;
        }

        .ct-nav {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ff6c8d;
            color: #fff;
            position: fixed;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 3.2rem;
            line-height: 3.2rem;
            border-top: 1px #dbdbdb solid;
            overflow: hidden;
            z-index: 999;
        }
    </style>
}




<script id="page_tmpl" type="text/x-jquery-tmpl">
    <div class="ct-main">
        <div class="swiper">
            <div class="swiper-container">
                <div class="swiper-wrapper">

                    {{each(j,item) displayImgUrls}}
                    <div class="swiper-slide"> <img src="${item.imgUrl}" /></div>
                    {{/each}}


                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="summary">
            <div class="ct">
                <div class="it-name">
                    <p class="name">${name}</p>
                </div>
                <div class="it-briefInfo font-gray">
                    <span class="briefInfo"></span>
                </div>
                <div class="it-price">
                    <span class="salePrice ft-main">¥${salePrice}</span>
                    {{if !showPriceIsInVisiable}}
                    <span class="showPrice cl2ft-gray1">¥${showPrice}</span>
                    {{/if}}

                </div>
                <div class="it-briefTags">
                    {{each(j,tag) briefTags}}
                    <span class="briefTag cl2ft-white cl2bg-main">${tag}</span>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="line-space"></div>
        <div class="details">
            <div class="its-tabs">
                <div class="it"><span class="txt ft-main">商品详情</span></div>
            </div>
            <div class="its-ct">
                <div class="it it-detailsDes">
                    {{html detailsDes}}
                </div>
            </div>
        </div>
    </div>
    <div class="ct-nav">
        <div class="it-buy operate" id="btn_Buy"><span class="txt">立即购买</span></div>
    </div>
</script>

@section scripts{
    <script src="~/Scripts/swiper.min.js"></script>
    <script type="text/javascript">

        var promoteId = $.lumos.getUrlParamValue("promoteId");
        var skuId = $.lumos.getUrlParamValue("skuId");

        $(document).ready(function () {
            onLoad();
            var mySwiper = new Swiper('.swiper-container', {
                loop: true,
                // 如果需要分页器
                pagination: '.swiper-pagination',
                paginationClickable: true
            });

            $('#btn_Buy').live("click", function (e) {
                unifiedOrder();
            });
        });

        function onLoad() {

            $.lumos.getJson({
                url: "/ProductSku/GetDetails",
                urlParams: { promoteId: promoteId, skuId: skuId },
                isShowLoading: true,
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        //alert(JSON.stringify(d))
                        var data = d.data;
                        document.title = data.name;;//更改网页标题
                        $('#page').html($("#page_tmpl").tmpl(data));
                    }
                    else {
                        $('#operate_result').html($("#operate_result_tmpl").tmpl(d.data));
                    }
                }
            });
        }

        function unifiedOrder() {

            $.lumos.postJson({
                url: "/ProductSku/UnifiedOrder",
                isShowLoading: true,
                data: { promoteId: promoteId, skuId: skuId },
                success: function (d) {
                    if (d.result == $.lumos.resultType.success) {
                        var params = d.data;

                        wx.chooseWXPay({
                            appId: params.appId,
                            timestamp: params.timestamp,
                            nonceStr: params.nonceStr,
                            package: params.package,
                            signType: params.signType,
                            paySign: params.paySign,
                            success: function (res) {
                                $.lumos.tips('您已支付成功');
                                window.location.href = "/Operate/Result?id=" + params.orderId + "&type=1";
                            },
                            cancel: function (res) {
                                $.lumos.tips('您已取消支付');
                            }
                        });


                    } else {
                        $.lumos.tips(d.message);
                    }
                }
            });

        }
    </script>
}
