@{
    ViewBag.Title = "资金流水";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{

    <style type="text/css">
        .operate-result {
            padding: 0 1rem;
        }

        .operate-result .imgbox {
            text-align: center;
            margin-top: 4rem;
        }

        .operate-result .imgbox img {
            width: 100px;
            display: inline-block;
        }

        .operate-result .item-message {
            text-align: center;
            margin-top: 1rem;
        }

        .operate-result .item-message span {
            font-size: 1.2rem;
            line-height: 3rem;
            color: #ff6c8d;
        }

        .operate-result .item-remarks {
            margin-top: 1rem;
        }

        .operate-result .item-remarks p {
            font-size: .9rem;
            line-height: 1.4rem;
        }

        .operate-result .item-btn {
            display: flex;
            padding: 10px 0px;
        }

        .operate-result .item-btn .btnbox {
            flex: 1;
            text-align: center;
        }


        .operate-result .btn {
            border: 1px solid #000;
            border-radius: 18px;
            padding: 4px 20px;
            display: inline-block;
            font-size: 14px;
        }
    </style>
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var rt = JSON.parse(sessionStorage.getItem("operateResult"));

            //alert(JSON.stringify(operateResult))

            var obj_message = $('.operate-result .item-message span');

            $(obj_message).text(rt.message);

            var obj_remarks = $('.operate-result .item-remarks p');

            $(obj_remarks).text(rt.remarks);

            var obj_btn = $('.operate-result .item-btn');

            if (typeof rt.button != 'undefined') {
                if (rt.button != null) {
                    if (rt.button.length > 0) {

                        $.each(rt.button, function (n, item) {

                            var trs = "";
                            trs += '<div class="btnbox">';
                            trs += '<a href="' + item.url + '" class="btn" style="color:' + item.color + '; border: 1px solid ' + item.color + ';" >' + item.name + '</a>';
                            trs += '</div>';

                            $(obj_btn).append(trs)
                        });
                    }
                }
            }

        });


    </script>
}

<div class="operate-result">
    <div class="item-result">
        <div class="imgbox">
            <img src="~/Content/images/operate-result-icon-success.png" />
        </div>
    </div>
    <div class="item-message">
        <span></span>
    </div>

    <div class="item-btn">

    </div>

    <div class="item-remarks">
        <p></p>
    </div>
</div>