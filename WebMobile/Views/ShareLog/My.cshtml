@{
    ViewBag.Title = "分享记录";
    Layout = "~/Views/Shared/_LayoutNavigationBar.cshtml";
}

@section styles{

    <style type="text/css">
        .list-nav2 {
            border-top: 0px solid #f6f6f6;
        }

        .list-nav2 > .nav2-item {
            display: flex;
            height: 3.6rem;
            line-height: 3.6rem;
        }

        .list-nav2 > .nav2-item > div {
        }

        .list-nav2 > .nav2-item > .item-left {
            border-bottom: 0px solid #f6f6f6;
            width: 3rem;
            text-align: left;
            align-items: center;
            display: flex;
        }

        .list-nav2 > .nav2-item > .item-left > img {
            width: 30px;
            height: 30px;
            border-radius: 30px;
        }

        .list-nav2 > .nav2-item > .item-middle, .list-nav2 > .nav2-item > .item-right {
            border-bottom: 1px solid #f6f6f6;
            flex: 1;
        }

        .list-nav2 > .nav2-item:last-child > .item-middle, .list-nav2 > .nav2-item:last-child > .item-right {
            border-bottom: 0px solid #f6f6f6;
        }

        .list-nav2 > .nav2-item > .item-middle .txt-h1 {
            height: 2rem;
            line-height: 2rem;
            text-align: left;
            display: block;
        }

        .list-nav2 > .nav2-item > .item-middle .txt-h2 {
            height: 1.6rem;
            line-height: 1.6rem;
            display: block;
            text-align: left;
            font-size: 12px;
            color: #999;
        }
    </style>
}

@section headerleft{
    <span class="title">分享记录</span>
}


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#list_trans").loadDataUl({
                url: "/ShareLog/GetMy",
                pageIndex: 0,
                searchParams: $("#form1").serializeArray(),
                searchButtonId: "btn_Search",
                loadmoreButtonId: "btn_More",
                containerId: "form1",
                rowDataCombie: function (p_index, p_row) {

                    var l_StrRows = "";


                    l_StrRows += '<li class="nav2-item">';
                    l_StrRows += '<div class="item-left fl">';
                    l_StrRows += '<img src="' + p_row.headImgUrl + '" alt="" style="width:30px;height:30px;" />';
                    l_StrRows += '</div>';
                    l_StrRows += '<div class="item-middle fl">';
                    l_StrRows += '<div class="txt-h1"><span>' + p_row.nickname + '</span></div>';
                    l_StrRows += '<div class="txt-h2"><span>' + p_row.buyTime + '</span></div>';
                    l_StrRows += '</div>';
                    l_StrRows += '<div class="item-right fl">';
                    l_StrRows += '<div class="txt fr">';
                    l_StrRows += '<span style="color:' + p_row.remarksFontColor + '">' + p_row.remarks + '</span>';
                    l_StrRows += '</div>';
                    l_StrRows += '</div>';
                    l_StrRows += '</li>';

                    return l_StrRows;
                },
                success: function (res) {

                }
            });
        });
    </script>
}


