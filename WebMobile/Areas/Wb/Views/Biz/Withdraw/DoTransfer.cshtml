@{
    ViewBag.Title = "";
    Layout = "~/Areas/Wb/Views/Shared/_Layout.cshtml";
}


@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {

            $.formValidator.initConfig({ formID: "form1", onError: function (msg) { art.dialog.tips(msg); } });
            $("#Model_Withdraw_AuditComments").formValidator({ onShow: "", onFocus: "", onCorrect: "" }).inputValidator({ min: 1, max: 100, onError: "审核意见不能为空,且不超过100个字符" });
        });

        function audit(operate) {

            var confirmMsg = "";
            switch (operate) {
                case 1:
                    confirmMsg = "确定转账成功，请慎重核对清楚？";
                    break;
                case 2:
                    confirmMsg = "确定转账失败，请慎重核对清楚？";
                    break;
                default:
                    return false;
            }

            var form = $("#form1");
            var isValid = $.formValidator.pageIsValid();
            var withdrawId = $('#Model_Withdraw_Id').val();
            var auditComments = $('#Model_Withdraw_AuditComments').val();
            if (isValid) {
                art.dialog.confirm(
               confirmMsg,
                function () {
                    $.lumos.postJson({
                        isUseHandling: true,
                        url: "/Wb/Biz/Withdraw/DoTransfer",
                        data: { operate: operate, withdrawId: withdrawId, auditComments: auditComments },
                        success: function (d) {
                            $.lumos.parentDialog.listTable.loadData();
                            $.lumos.closeDialog();
                        }
                    });
                });
            }

            return false;
        }

    </script>
}

<div class="gbr-row">
    <form id="form1" name="form1" method="post">
        <input id="Model_Withdraw_Id" name="Model.Withdraw.Id" type="hidden" value="@Model.Withdraw.Id" />

        <div class="gbr-row-title clearfix">
            <div class="pull-left">
                <h5>用户信息</h5>
            </div>
            <div class="pull-right f-tb1-item-pull-right">
                <h6></h6>
            </div>
        </div>
        <table class="f-tb" cellpadding="0" cellspacing="1">
            <tr>
                <td class="f-tb-t" style="width:80px">
                    昵称：
                </td>
                <td class="f-tb-c">
                    @Model.UserInfo.Nickname
                </td>
            </tr>
        </table>
        <div class="gbr-row-title clearfix">
            <div class="pull-left">
                <h5>提现信息</h5>
            </div>
            <div class="pull-right f-tb1-item-pull-right">
                <h6></h6>
            </div>
        </div>
        <table class="f-tb" cellpadding="0" cellspacing="1">
            <tr>
                <td class="f-tb-t" style="width:80px">
                    流水号：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.Sn
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    银行名称：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.AcBank
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    银行卡号码：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.AcBankCardNumber
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    姓名：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.AcName
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    身份证：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.AcIdNumber
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    提现金额：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.Amount.ToF2Price()
                </td>
            </tr>
        </table>
        <div class="gbr-row-title clearfix">
            <div class="pull-left">
                <h5>审核意见</h5>
            </div>
            <div class="pull-right f-tb1-item-pull-right">
                <h6></h6>
            </div>
        </div>
        <textarea id="Model_Withdraw_AuditComments" name="Model.Withdraw.AuditComments" class="ckeditor" style="width:99%;height:80px;"></textarea>
    </form>
</div>