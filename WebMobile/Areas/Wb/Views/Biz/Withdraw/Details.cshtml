@model WebMobile.Areas.Wb.Models.Biz.Withdraw.DetailsViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Wb/Views/Shared/_LayoutHomeDialog.cshtml";
}

<div class="gbr-row">
    <form id="form1" name="form1" method="post">
        <div class="gbr-row-title clearfix">
            <div class="pull-left">
                <h5>用户信息</h5>
            </div>
            <div class="pull-right f-tb1-item-pull-right">
                <h6></h6>
            </div>
        </div>
        <table class="f-tb" cellpadding="0" cellspacing="1">
            <tr>
                <td class="f-tb-t" style="width:80px">
                    昵称：
                </td>
                <td class="f-tb-c">
                    @Model.UserInfo.Nickname
                </td>
            </tr>
        </table>
        <div class="gbr-row-title clearfix">
            <div class="pull-left">
                <h5>提现信息</h5>
            </div>
            <div class="pull-right f-tb1-item-pull-right">
                <h6></h6>
            </div>
        </div>
        <table class="f-tb" cellpadding="0" cellspacing="1">
            <tr>
                <td class="f-tb-t" style="width:80px">
                    流水号：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.Sn
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    姓名：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.AcName
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    身份证：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.AcIdNumber
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    提交时间：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.ApplyTime.ToUnifiedFormatDateTime()
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    提现金额：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.Amount.ToF2Price()
                </td>
            </tr>
            <tr>
                <td class="f-tb-t">
                    状态：
                </td>
                <td class="f-tb-c">
                    @Model.Withdraw.Status.GetCnName()
                </td>
            </tr>
            @if (Model.Withdraw.Status == Lumos.Entity.Enumeration.WithdrawStatus.Success)
            {
                <tr>
                    <td class="f-tb-t">
                        转账时间：
                    </td>
                    <td class="f-tb-c">
                        @Model.Withdraw.SettlementTime.ToUnifiedFormatDateTime()
                    </td>
                </tr>
            }
            @if (Model.Withdraw.Status == Lumos.Entity.Enumeration.WithdrawStatus.Failure)
            {
                <tr>
                    <td class="f-tb-t">
                        失败原因：
                    </td>
                    <td class="f-tb-c">
                        @Model.Withdraw.FailureReason
                    </td>
                </tr>
            }

        </table>
    </form>
</div>