    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" type="image/x-icon" rel="shortcut icon" />
    <link href="/Areas/Wb/Content/base/Site.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
    <script src="~/Areas/Wb/Scripts/ArtDialog/artDialog.source.js?skin=default"></script>
